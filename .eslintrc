{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"semi": ["error", "always"],
		"no-console": ["warn", { allow: ["warn", "error"] }],
		"no-unused-vars": ["warn"],
		"quotes": ["warn", "double", { "avoidEscape": true }]
	}
}
